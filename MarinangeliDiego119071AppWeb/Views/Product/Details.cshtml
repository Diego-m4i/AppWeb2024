@model Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="text-center">
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; height: auto;" />
    <h3>@Model.Name</h3>
    <p>@Model.Description</p>
    <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to List</a>

    <form asp-action="AddToCart" method="post" class="mt-3">
        <input type="hidden" name="productId" value="@Model.Id" />
        <div class="form-group">
            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 100px; display: inline-block;" />
        </div>
        <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
</div>