@model IEnumerable<Models.Product>

@{
ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <a href="@Url.Action("AddProduct", "Home")" class="btn btn-primary">Add Product</a>
</div>

<h2>Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
    <div class="col-md-4 text-center">
        <div class="card mb-4 shadow-sm">
            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="width: 100%; height: auto;" />
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <p class="card-text"><strong>Price: </strong>@product.Price.ToString("C")</p>
            </div>
        </div>
    </div>
    }
</div>
