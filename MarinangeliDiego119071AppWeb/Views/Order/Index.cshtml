@model IEnumerable<Models.Order>

@{
ViewData["Title"] = "Order List";
}

<h1>Order List</h1>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
    <tr>
        <td>@order.OrderId</td>
        <td>@order.Status</td>
        <td>
            <a asp-action="Details" asp-route-id="@order.OrderId">Details</a>
        </td>
    </tr>
    }
    </tbody>
</table>
