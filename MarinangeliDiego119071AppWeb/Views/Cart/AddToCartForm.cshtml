<form asp-action="AddToCart" method="post">
    <input type="hidden" name="productId" value="@Model.Product.Id" />

    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" class="form-control" />
        <!-- Rimuovi asp-validation-for="Quantity" e aggiungi un messaggio di validazione personalizzato -->
        @if (ViewData.ModelState["Quantity"]?.Errors.Any() ?? false)
        {
            <span class="text-danger">@ViewData.ModelState["Quantity"].Errors.FirstOrDefault()?.ErrorMessage</span>
        }
    </div>

    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>